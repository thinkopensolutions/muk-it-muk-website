<odoo>

<template id="snippet_grid_container_options" inherit_id="website.snippet_options" name="Grid Container Options">
    <xpath expr="//div[@data-js='background']" position="after">
        <div data-js='grid_container'
            data-selector=".grid_container"
            data-drop-in="section">
			<li class="dropdown-submenu">
		    	<a href="#"><i class="fa fa-stop"/>Container Options</a>
		        <ul class="dropdown-menu">
		        	<li data-select-class="container"><a href="#">Container</a></li>
		        	<li data-select-class="container-fluid"><a href="#">Fluid Container</a></li>
		    	</ul>
			</li>
        </div>
    </xpath>
</template>

<template id="snippet_grid_row_options" inherit_id="website.snippet_options" name="Grid Row Options">
    <xpath expr="//div[@data-js='background']" position="after">
        <div data-js='grid_row'
            data-selector=".grid_row"
            data-drop-in=".container, .container-fluid, .grid_column,
            	[class*='container'] *:not(b):not(big):not(i):not(small):not(tt)
				:not(abbr):not(acronym):not(cite):not(code):not(dfn):not(em):not(kbd):not(samp):not(var)
				:not(a):not(bdo):not(br):not(img):not(map):not(object):not(q):not(script):not(sub):not(sup)
				:not(button):not(input):not(label):not(select):not(textarea)">
        </div>
    </xpath>
</template>

