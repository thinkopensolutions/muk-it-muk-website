<odoo>

<template id="snippet_grid_bar" inherit_id="website.snippets" name="Grid Bar">
	<xpath expr="//div[@id='snippet_structure']" position="after">
		<div id="snippet_grid" class="o_panel">
			<div class="o_panel_header">
				<i class="fa fa-th"></i>
				Grid System
			</div>
			<div class="o_panel_body">
	
			</div>
		</div>
	</xpath>
</template>

<template id="snippet_grid_section_icon" inherit_id="snippet_grid_bar" name="Grid Section Snippet Icon">
  <xpath expr="//div[@id='snippet_grid']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="muk_website_snippet_grid.snippet_grid_section"
       t-thumbnail="/muk_website_snippet_grid/static/src/img/grid_section.png"/>
  </xpath>
</template>

<template id="snippet_grid_container_icon" inherit_id="snippet_grid_bar" name="Grid Container Snippet Icon">
  <xpath expr="//div[@id='snippet_grid']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="muk_website_snippet_grid.snippet_grid_container"
       t-thumbnail="/muk_website_snippet_grid/static/src/img/grid_container.png"/>
  </xpath>
</template>

<template id="snippet_grid_row_icon" inherit_id="snippet_grid_bar" name="Grid Row Snippet Icon">
  <xpath expr="//div[@id='snippet_grid']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="muk_website_snippet_grid.snippet_grid_row"
       t-thumbnail="/muk_website_snippet_grid/static/src/img/grid_row.png"/>
  </xpath>
</template>

<template id="snippet_grid_column_icon" inherit_id="snippet_grid_bar" name="Grid Column Snippet Icon">
  <xpath expr="//div[@id='snippet_grid']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="muk_website_snippet_grid.snippet_grid_column"
       t-thumbnail="/muk_website_snippet_grid/static/src/img/grid_column.png"/>
  </xpath>
</template>

</odoo>